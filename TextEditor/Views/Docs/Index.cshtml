@model IEnumerable<TextEditor.Models.Doc>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="d-flex justify-content-center align-items-center" style="background-color:lightgray; width: 150px; height:200px; font-size:100px">
    <a style="text-decoration: none; color: black" asp-action="Create">+</a>
</div>
<span style="font-weight: bold">Blank Document</span>

<hr />
<div class="row">
@foreach (var item in Model)
{
	<div class="col-2">
		<div class="d-flex justify-content-center align-items-center" style="background-color:lightblue; width: 150px; height:200px; font-size:100px">
				<a style="text-decoration: none; color: black" asp-action="Edit" asp-route-id="@item.Id">📃</a>
		</div>
		<span style="font-weight: bold">@item.Title</span>
		<hr />
	</div>
}
</div>
